        app:left_text_color="#FFFFFF"
        app:right_bg="@drawable/blue_button"
        app:right_text="更多"
        app:right_text_color="#FFFFFF"
        app:title_text="自定义标题"
        app:title_text_color="#123412"
        app:title_text_size="10sp"/>
